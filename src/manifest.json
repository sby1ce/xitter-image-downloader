{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "{{chrome}}.action": {
    "default_popup": "src/popup.html"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "{{chrome}}.service_worker": "src/background.ts",
    "{{firefox}}.scripts": ["src/background.ts"]
  },
  "{{chrome}}.host_permissions": ["*://*.pximg.net/*"],
  "permissions": ["activeTab", "tabs", "scripting", "downloads", "declarativeNetRequestWithHostAccess"],
  "content_scripts": [
    {
      "matches": ["*://x.com/*"],
      "js": ["src/content/twitter.ts"]
    },
    {
      "matches": ["*://discord.com/*"],
      "js": ["src/content/discord.ts"]
    },
    {
      "matches": ["*://www.pixiv.net/*"],
      "js": ["src/content/pixiv.ts"]
    }
  ]
}
